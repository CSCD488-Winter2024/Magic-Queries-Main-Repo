---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const websiteName = 'Merlyns MTG Search';
---

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magic Cards Collection</title>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet"/>
</head>

<Header />

<Layout title="Layout">
	<main class= "bg-gray-50 min-h-screen grid grid-cols-3 gap-3">

		<!-- Start of Sidebar -->
		<div class="h-screen sticky top-0">
			<!-- Start of Color checkboxes -->
			<div class="m-4 flex items-center">
				<ul class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
   					<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="white-checkbox" type="checkbox" value="W" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="white-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">White</label>
        				</div>
    				</li>
    				<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="blue-checkbox" type="checkbox" value="U" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="blue-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Blue</label>
        				</div>
    				</li>
    				<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="black-checkbox" type="checkbox" value="B" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="black-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Black</label>
        				</div>
    				</li>
    				<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="red-checkbox" type="checkbox" value="R" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="red-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Red</label>
        				</div>
    				</li>
					<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="green-checkbox" type="checkbox" value="G" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="green-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Green</label>
        				</div>
    				</li>
					<li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        				<div class="flex items-center ps-3">
        	    			<input id="colorless-checkbox" type="checkbox" value="C" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 color-checkbox">
        	    			<label for="colorless-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Colorless</label>
        				</div>
    				</li>
				</ul>
			</div>
			<!-- End of Color checkboxes -->
			<!-- Start of Dropdown menu -->
			<div class="m-4 flex items-center">
				<button id="dropdownCheckboxButton" data-dropdown-toggle="dropdownDefaultCheckbox" class=" text-white dark:bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-blue-800" type="button" items-center >Dropdown Checkbox for Sets <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
					</svg>
				</button>
			
				<div id="dropdownDefaultCheckbox" class="z-10 hidden w-48 bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600">
					<ul class="p-3 space-y-3 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownCheckboxButton">
					<li>
						<div class="flex items-center">
						<input id="checkbox-item-1" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
						<label for="checkbox-item-1" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Type A</label>
						</div>
					</li>
					<li>
						<div class="flex items-center">
							<input checked id="checkbox-item-2" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
							<label for="checkbox-item-2" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Type B</label>
						</div>
					</li>
					<li>
						<div class="flex items-center">
						<input id="checkbox-item-3" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
						<label for="checkbox-item-3" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Type C</label>
						</div>
					</li>
					</ul>
				</div>
			</div>	
			<!-- End of Dropdown menu -->

		</div>
		<!-- End of Sidebar -->

		<!-- Start of Search box -->
		<div class=" flex flex-col col-span-2">
			<section class="search-container">
				<input type="text" id="searchInput" placeholder="Search cards..." />
				<button id="searchButton">Search</button>
			</section>
			<section class="card-container" id="cardContainer">
				<!-- Cards will be dynamically added here -->
			</section>
		</div>
		<!-- End of Search box -->
	
	</main>

	<!-- <body>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
	</body> -->

	<Footer />
    
	<script> 
		import "../scripts/Searcher.js";
	</script>
</Layout>

